{
  "name": "@sonicoriginalsoftware/jester",
  "description": "Simple testing framework for javascript",
  "main": "index.js",
  "version": "0.0.24",
  "type": "module",
  "bin": "./bin/jester.js",
  "keywords": [
    "tests",
    "unit tests"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SonicOriginalSoftware/jester.git"
  },
  "author": "Nathan Blair",
  "license": "MIT License",
  "homepage": "https://github.com/SonicOriginalSoftware/jester#readme",
  "scripts": {
    "test": "node --no-warnings --experimental-json-modules --harmony bin/jester.js -x tests/exclude",
    "coverage": "npx c8 --temp-directory=coverage report",
    "document": "npx typedoc --ignoreCompilerErrors --out docs --theme 'minimal' --excludeExternals --excludeNotExported --disableOutputCheck --inputFiles 'lib/assert.js'"
  },
  "engines": {
    "node": ">=13.2.0"
  },
  "devDependencies": {
    "@types/node": ""
  }
}
